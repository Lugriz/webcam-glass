{
  "name": "WebcamGlass",
  "author": {
    "name": "Jerson La Torre",
    "email": "jerson.latorre@gmail.com",
    "url": "http://plug.pe"
  },
  "description": "Webcam tool for making tutorials or video conferencing",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "buildWindows": "electron-packager --electron-version='7.3.0' --platform='win32' --overwrite .",
    "buildLinux": "electron-packager --electron-version='7.3.0' --asar --icon=assets/icons/1024x1024.png --prune=true --platform='linux' --overwrite .",
    "buildLinuxDeb": "node_modules/.bin/electron-installer-debian --src WebcamGlass-linux-x64 --arch amd64 --config debian.json",
    "buildMacOS": "electron-packager --electron-version='7.3.0' --platform='darwin' --overwrite ."
  },
  "devDependencies": {
    "electron": "7.3.0",
    "electron-installer-debian": "^3.0.0"
  }
}
